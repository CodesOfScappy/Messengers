<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/login_image"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/cute" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/textbox"
                android:drawableStart="@drawable/email2"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:hint="Email..."
                android:inputType="textEmailAddress"
                android:padding="4dp" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_email"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/textbox"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:hint="Password..."
                android:inputType="textPassword"
                android:padding="4dp" />

            <TextView
                android:id="@+id/forget_password_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Forget Password ?"
                android:layout_marginTop="2dp"
                android:layout_marginRight="23dp"
                android:layout_marginLeft="15dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/textgray"
                android:layout_below="@id/login_password"

                />

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/forget_password_link"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="27dp"
                android:background="@drawable/buttons"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/need_new_account_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_button"
                android:layout_marginTop="4dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:textAlignment="center"
                android:text="Need new Account ?"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/login_usign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/need_new_account_link"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:textAlignment="center"
                android:text="or Login usign your"
                android:textSize="17sp"
                android:textColor="@color/textgray"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/login_phone_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="97dp"
                android:layout_marginRight="97dp"
                android:background="@drawable/buttons"
                android:text="Phone"
                android:textAlignment="textStart"
                android:drawablePadding="25dp"
                android:drawableStart="@drawable/ic_1425297811"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textAllCaps="false"
                android:layout_below="@id/login_usign"/>





        </RelativeLayout>
    </ScrollView>


</RelativeLayout>